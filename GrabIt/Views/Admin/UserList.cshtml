@model IEnumerable<GrabIt.Models.AspNetUser>



<div style="width: 50%;">
    <table id="userTbl" class="table table-striped table-bordered" cellspacing="0" width="100%" style="font-size: 15px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <button type="button" class="btn btn-default btn-sm" onclick="" style="margin-left:10px;">
                            <span class="glyphicon glyphicon-edit"></span> Edit User
                        </button>
                        <button type="button" class="btn btn-default btn-sm" onclick="showDeleteWarn('@item.Email');" style="margin-left:10px;">
                            <span class="glyphicon glyphicon-trash"></span> Delete User
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#userTbl').dataTable({
            "order": [0, 'desc']
        });
    });

    function showDeleteWarn(email) {
        BootstrapDialog.show({
            message: 'Are You sure you want to delete the user ' + email + '?',
            buttons: [{
                label: 'Cancel',
                cssClass: 'btn-primary',
                action: function (dialogRef) {
                    dialogRef.close();
                }
            }, {
                label: 'OK',
                action: function (dialogRef) {
                    dialogRef.close();
                }
            }],
            type: BootstrapDialog.TYPE_WARNING,
            closable: true,
        });
    }




</script>